{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <h1>{{ title }}</h1>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Description</th>
                    <th scope="col">Date d'ajout</th>
                    <th scope="col">Cat√©gorie</th>
                    <th scope="col">Prix</th>
                    <th></th>
                </tr>
                </thead>
                {% for val in produit %}
                    <tr>
                        <td>{{ val.id }}</td>
                        <td>{{ val.nom }}</td>
                        <td>{{ val.description }}</td>
                        <td>{{ val.dateajout | date("m/d/Y") }}</td>
                        <td>{{ val.categorie }}</td>
                        <td>{{ val.prix }}</td>
                        <td class="text-right">
                            <a href="/produit/voir/{{ val.id }}" class="btn btn-primary">Voir</a>
                            <a href="/produit/modifier/{{ val.id }}" class="btn btn-secondary">Modifier</a>
                            <a href="/produit/supprimer/{{ val.id }}" class="ml-2 btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
        <div class="row">
            <a href="/produit/ajouter" class="btn btn-primary">Ajouter un produit</a>
        </div>
    </div>
{% endblock %}
