{% extends 'base.html.twig' %}

{% block title %}Ajouter un produit{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>{{ title }}</h1>
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-4">{{ form_row(form.nom) }}</div>
        <div class="col-md-4">{{ form_row(form.categorie) }}</div>
        <div class="col-md-4">{{ form_row(form.description) }}</div>
        <div class="col-md-4">{{ form_row(form.prix) }}</div>
    </div>
    {{ form_widget(form) }}
    {{ form_end(form) }}
    <a href="{{ path('produit') }}">Retour</a>
</div>
{% endblock %}
