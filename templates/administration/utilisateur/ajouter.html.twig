{% extends 'paper/layout.html.twig' %}

{% block title %}Ajouter utilisateurs{% endblock %}

{% block content %}
    <div class="container mt-4">
        <h1>{{ title }}</h1>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-4">{{ form_row(form.pseudo) }}</div>
            <div class="col-md-4">{{ form_row(form.nom) }}</div>
            <div class="col-md-4">{{ form_row(form.prenom) }}</div>
            <div class="col-md-4">{{ form_row(form.mail) }}</div>
            <div class="col-md-4">{{ form_row(form.password) }}</div>
            <div class="col-md-4">{{ form_row(form.role_id) }}</div>
        </div>
        {{ form_widget(form) }}
        {{ form_end(form) }}
        <a href="{{ path('administration_utilisateur') }}">Retour</a>
    </div>
{% endblock %}
